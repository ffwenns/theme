{
  "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-go-template"],
  "overrides": [
    {
      "files": ["*.html"],
      "options": {
        "parser": "go-template",
        "printWidth": 180,
        "htmlWhitespaceSensitivity": "ignore"
      }
    }
  ],
  "tailwindStylesheet": "./assets/css/input.css",
  "tailwindPreserveWhitespace": true
}
